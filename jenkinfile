pipeline {
    agent any
    options {
        skipDefaultCheckout()  // Important: disables default Git checkout by Jenkins
    }
    tools {
        maven 'MAVEN_HOME'
    }
    stages {
        stage('Clone Repository & Clean Workspace') {
            steps {
                deleteDir()  // Clean workspace
                bat "git clone https://github.com/Bandi-Sushma-Sree/Maven_Project.git"
            }
        }
        stage('Build') {
            steps {
                dir('Maven_Project') {
                    bat "mvn clean install"
                }
            }
        }
        stage('Test') {
            steps {
                dir('Maven_Project') {
                    bat "mvn test"
                }
            }
        }
        stage('Package') {
            steps {
                dir('Maven_Project') {
                    bat "mvn package"
                }
            }
        }
    }
}
