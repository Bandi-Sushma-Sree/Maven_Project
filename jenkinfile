pipeline {
    agent any
    tools {
        maven 'MAVEN_HOME'  // Confirm this is the exact tool name in Jenkins
    }
    stages {
        stage('Clone Repository & Clean Workspace') {
            steps {
                deleteDir()  // Clean workspace before clone
                bat "git clone https://github.com/Bandi-Sushma-Sree/Maven_Project.git"
            }
        }
        stage('Debug Info') {
            steps {
                dir('Maven_Project') {
                    bat 'mvn -version'
                    bat 'dir'
                    bat 'type pom.xml'
                }
            }
        }
        stage('Build') {
            steps {
                dir('Maven_Project') {
                    bat "mvn clean install"
                }
            }
        }
        stage('Test') {
            steps {
                dir('Maven_Project') {
                    bat "mvn test"
                }
            }
        }
        stage('Package') {
            steps {
                dir('Maven_Project') {
                    bat "mvn package"
                }
            }
        }
    }
}
