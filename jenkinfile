
pipeline {
    agent any
    tools{
        maven 'MAVEN-HOME'
    }
    stages {
        stage('git repo & clean') {
            steps {
                //bat "rmdir  /s /q mavenjava"
                bat "git clone https://github.com/Bandi-Sushma-Sree/Maven_Project.git"
                bat "mvn clean -f Maven_Project"
            }
        }
        stage('install') {
            steps {
                bat "mvn install -f Maven_Project/pom.xml" 
            }
        }
        stage('test') {
            steps {
                bat "mvn test -f Maven_Project/pom.xml"
            }
        }
        stage('package') {
            steps {
                bat "mvn package -f Maven_Project/pom.xml"
            }
        }
    }
}
